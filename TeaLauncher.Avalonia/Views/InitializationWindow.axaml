<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TeaLauncher.Avalonia.Views.InitializationWindow"
        Title="TeaLauncher - First Time Setup"
        Width="600"
        Height="650"
        MinHeight="500"
        MinWidth="500"
        CanResize="True"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundPrimaryBrush}"
        Icon="/Assets/icon.ico">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Border Padding="{DynamicResource SpacingXXLarge}">
            <StackPanel Spacing="10">
                <!-- Header -->
                <TextBlock Classes="heading" Text="Welcome to TeaLauncher!" />

                <TextBlock Classes="body" TextWrapping="Wrap">
                    TeaLauncher is a keyboard-driven command launcher for Windows.
                    This appears to be your first time running it!
                </TextBlock>

                <!-- Config File Section -->
                <TextBlock Classes="subheading" Text="Configuration File" />

                <TextBlock Classes="body" TextWrapping="Wrap">
                    TeaLauncher uses a YAML configuration file to store your commands.
                </TextBlock>

                <Border Classes="info-panel">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Config file will be created at:"
                                   FontFamily="{DynamicResource FontFamilyPrimary}"
                                   FontSize="{DynamicResource FontSizeSmall}"
                                   FontWeight="{DynamicResource FontWeightSemiBold}"
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock x:Name="ConfigPathText"
                                   Classes="code"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Keyboard Shortcut Section -->
                <TextBlock Classes="subheading" Text="Keyboard Shortcut" />

                <TextBlock Classes="body" TextWrapping="Wrap">
                    Press the keyboard shortcut from anywhere to activate TeaLauncher:
                </TextBlock>

                <Border Classes="info-panel">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="15">
                            <RadioButton x:Name="CtrlSpaceRadio"
                                         Content="Ctrl + Space"
                                         IsChecked="True"
                                         GroupName="Hotkey"/>
                            <RadioButton x:Name="AltSpaceRadio"
                                         Content="Alt + Space"
                                         GroupName="Hotkey"/>
                        </StackPanel>
                        <TextBlock Classes="muted"
                                   Text="Note: You can change this later by editing the code"/>
                    </StackPanel>
                </Border>

                <!-- Instructions -->
                <TextBlock Classes="subheading" Text="After Setup" />

                <TextBlock Classes="body" TextWrapping="Wrap">
                    After clicking Start, TeaLauncher will:
                </TextBlock>

                <StackPanel Margin="20,5,0,5" Spacing="6">
                    <TextBlock Classes="bullet" Text="• Create a sample configuration file"/>
                    <TextBlock Classes="bullet" Text="• Register the global keyboard shortcut"/>
                    <TextBlock Classes="bullet" Text="• Run in the background (hidden)"/>
                    <TextBlock Classes="bullet" Text="• Activate when you press the shortcut"/>
                </StackPanel>

                <TextBlock Classes="body"
                           TextWrapping="Wrap"
                           Margin="0,10,0,0">
                    To customize your commands, edit the configuration file with any text editor.
                </TextBlock>

                <!-- Start Button -->
                <Button x:Name="StartButton"
                        Classes="primary"
                        Content="Start TeaLauncher"
                        Click="StartButton_Click"
                        Margin="0,25,0,0"/>
            </StackPanel>
        </Border>
    </ScrollViewer>
</Window>
