<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Typography System -->

    <!-- Font Families -->
    <FontFamily x:Key="FontFamilyPrimary">Inter, Segoe UI, sans-serif</FontFamily>
    <FontFamily x:Key="FontFamilyMonospace">Consolas, Courier New, monospace</FontFamily>

    <!-- Font Sizes -->
    <x:Double x:Key="FontSizeXLarge">28</x:Double>
    <x:Double x:Key="FontSizeLarge">24</x:Double>
    <x:Double x:Key="FontSizeMedium">16</x:Double>
    <x:Double x:Key="FontSizeNormal">14</x:Double>
    <x:Double x:Key="FontSizeSmall">12</x:Double>
    <x:Double x:Key="FontSizeXSmall">11</x:Double>

    <!-- Font Weights -->
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>
    <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
    <FontWeight x:Key="FontWeightRegular">Regular</FontWeight>
    <FontWeight x:Key="FontWeightLight">Light</FontWeight>

    <!-- Spacing -->
    <Thickness x:Key="SpacingXSmall">5</Thickness>
    <Thickness x:Key="SpacingSmall">10</Thickness>
    <Thickness x:Key="SpacingMedium">15</Thickness>
    <Thickness x:Key="SpacingLarge">20</Thickness>
    <Thickness x:Key="SpacingXLarge">30</Thickness>
    <Thickness x:Key="SpacingXXLarge">40</Thickness>

    <!-- Border Radius -->
    <CornerRadius x:Key="BorderRadiusSmall">4</CornerRadius>
    <CornerRadius x:Key="BorderRadiusMedium">6</CornerRadius>
    <CornerRadius x:Key="BorderRadiusLarge">8</CornerRadius>

</ResourceDictionary>
