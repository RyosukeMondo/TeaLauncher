<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Color Palette - Sophisticated Dark Theme -->
    <!-- All colors meet WCAG 2.1 AA contrast requirements (4.5:1 for normal text, 3:1 for large text) -->

    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimary">#1A1A1A</Color>
    <Color x:Key="BackgroundSecondary">#252525</Color>
    <Color x:Key="BackgroundTertiary">#2D2D2D</Color>
    <Color x:Key="BackgroundElevated">#333333</Color>

    <!-- Surface Colors -->
    <Color x:Key="SurfaceDefault">#2A2A2A</Color>
    <Color x:Key="SurfaceHighlight">#363636</Color>
    <Color x:Key="SurfaceAccent">#404040</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#B8B8B8</Color>
    <Color x:Key="TextTertiary">#8F8F8F</Color>
    <Color x:Key="TextDisabled">#666666</Color>

    <!-- Accent Colors -->
    <Color x:Key="AccentPrimary">#5BA3E7</Color>
    <Color x:Key="AccentSecondary">#4A8CD1</Color>
    <Color x:Key="AccentTertiary">#3A75BA</Color>

    <!-- Status Colors -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FFA726</Color>
    <Color x:Key="Error">#EF5350</Color>
    <Color x:Key="Info">#5BA3E7</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderPrimary">#404040</Color>
    <Color x:Key="BorderSecondary">#333333</Color>
    <Color x:Key="BorderAccent">#5BA3E7</Color>

    <!-- Overlay Colors -->
    <Color x:Key="OverlayLight">#40FFFFFF</Color>
    <Color x:Key="OverlayMedium">#60FFFFFF</Color>
    <Color x:Key="OverlayDark">#CC000000</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="{StaticResource BackgroundPrimary}"/>
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundSecondary}"/>
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="{StaticResource BackgroundTertiary}"/>
    <SolidColorBrush x:Key="BackgroundElevatedBrush" Color="{StaticResource BackgroundElevated}"/>

    <SolidColorBrush x:Key="SurfaceDefaultBrush" Color="{StaticResource SurfaceDefault}"/>
    <SolidColorBrush x:Key="SurfaceHighlightBrush" Color="{StaticResource SurfaceHighlight}"/>
    <SolidColorBrush x:Key="SurfaceAccentBrush" Color="{StaticResource SurfaceAccent}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiary}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabled}"/>

    <SolidColorBrush x:Key="AccentPrimaryBrush" Color="{StaticResource AccentPrimary}"/>
    <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{StaticResource AccentSecondary}"/>
    <SolidColorBrush x:Key="AccentTertiaryBrush" Color="{StaticResource AccentTertiary}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Error}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource Info}"/>

    <SolidColorBrush x:Key="BorderPrimaryBrush" Color="{StaticResource BorderPrimary}"/>
    <SolidColorBrush x:Key="BorderSecondaryBrush" Color="{StaticResource BorderSecondary}"/>
    <SolidColorBrush x:Key="BorderAccentBrush" Color="{StaticResource BorderAccent}"/>

    <SolidColorBrush x:Key="OverlayLightBrush" Color="{StaticResource OverlayLight}"/>
    <SolidColorBrush x:Key="OverlayMediumBrush" Color="{StaticResource OverlayMedium}"/>
    <SolidColorBrush x:Key="OverlayDarkBrush" Color="{StaticResource OverlayDark}"/>

</ResourceDictionary>
